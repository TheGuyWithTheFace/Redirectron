{
	"manifest_version": 2,
	"name": "Redirectron",
	"version": "1.0",
	"description": "Redirects to websites through a proxy server",
	"browser_action": {
		"default_icon": "icon38.png"
	},
	"permissions": [
		"tabs" // required for redirecting by key press
	], 
	"background": {
		"scripts": ["mainEvent.js"] // [@self] remember to convert to event page.
	},
	"icons": {
		"128": "icon128.png"
	},
	"options_page": "options.html",
	"commands": {
		"redirect-on-key": {
			"suggested_key": {
				"default": "Alt+Shift+F"
			},
			"description": "Redirect triggered by key press instead of click"
		}
	}
}
